{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/recommended",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi":[
            "error",
            "never"
        ],
        "vue/custom-event-name-casing": ["off", {
            "ignores": []
        }],
        "no-unused-vars":["off"],
        "camelcase":"warn",
        "no-constant-condition":"off",
        "eqeqeq":"off",
        "vue/html-self-closing": ["error", {
            "html": {
              "void": "never",
              "normal": "always",
              "component": "always"
            },
            "svg": "always",
            "math": "always"
          }]
    }
}